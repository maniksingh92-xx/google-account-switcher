{
  "name": "Google Account Switcher",
  "author": "Manik Singh",
  "version": "1.0",
  "manifest_version": 2,
  "description": "This extension allows you to switch between accounts with the help of keyboard shortcuts",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.google.co.in/*"
      ],
      "js": ["switcher.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Google Account Switcher"
  }
}